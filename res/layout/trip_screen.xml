<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skyline_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/your_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/autoMake"
        android:layout_marginTop="22dp"
        android:text="Enter Your Trip Information Below"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/startLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_trip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:text="Set Start" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/endLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startLoc"
        android:layout_below="@+id/startLoc"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="Set End" />

    <Button
        android:id="@+id/tripOkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/gasPrice"
        android:layout_below="@+id/gasPrice"
        android:layout_marginTop="30dp"
        android:text="OK" />

    <EditText
        android:id="@+id/gasPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/endLoc"
        android:layout_below="@+id/endLoc"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="number"
        android:text="Current Gas Price" />

</RelativeLayout>
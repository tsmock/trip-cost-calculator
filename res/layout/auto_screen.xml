<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skyline_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/autoMPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autoYear"
        android:layout_below="@+id/autoYear"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number"
        android:text="Average MPG" />

    <Button
        android:id="@+id/autoOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/autoMPG"
        android:layout_below="@+id/autoMPG"
        android:layout_marginTop="16dp"
        android:text="OK" />

    <EditText
        android:id="@+id/autoYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autoModel"
        android:layout_below="@+id/autoModel"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number"
        android:text="Year" />

    <TextView
        android:id="@+id/your_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/autoMake"
        android:layout_marginTop="22dp"
        android:text="Enter Your Vehicle Information Below"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/autoMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/autoModel"
        android:layout_below="@+id/your_trip"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:text="Make" />

    <EditText
        android:id="@+id/autoModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoMake"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:text="Model" >

        <requestFocus />
    </EditText>

</RelativeLayout>